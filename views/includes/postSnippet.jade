article.post-wrap
  header
    h2
      a(href=post.url)
        = post.title
  div.post-meta
    span.category Filed Under:&nbsp;
      a(href=categoryUrl(post.category)) #{post.category}
    span.date On: #{post.date.getMonth()+1}.#{post.date.getDate()}.#{post.date.getFullYear()}
    span.tags About: &nbsp;
      - each tag in post.tags
        a(href=tagUrl(tag)) #{tag}

  div.post-content
    != post.preview